Plug 'michaeljsmith/vim-indent-object'
let mapleader = ','
map <ESC> <ESC>:noh<CR>
" Escape from insertmode with jj
imap jj <ESC>:noh<CR>
" preserve my pinkies health by using ; for :
nnoremap ; :

" Navigate with Ctrl+h,j,k,l
inoremap <C-h> <Left>
inoremap <C-j> <Down>
inoremap <C-k> <Up>
inoremap <C-l> <Right>

map <leader>ff <Action>(GotoFile)
map <leader>gc <Action>(Git.CompareWithBranch)
map <leader>fc <Action>(GotoClass)
map <leader>fs <Action>(GotoSymbol)
map <leader>h <Action>(ShowIntentionActions)
map <leader>ld <Action>(GotoDeclaration)
map <leader>, <Action>(SurroundWithEmmet)

set number relativenumber
set clipboard=unnamed
