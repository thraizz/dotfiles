! basic configuration
URxvt.scrollBar: false
URxvt.cursorBlink: true
URxvt.internalBorder: 14
URxvt.urlLauncher: firefox

! font options
URxvt.font:       xft:Hack: size=10: antialiasing=true
Xft*antialias:    true
Xft*hinting:      full

Xcursor.size: 12

