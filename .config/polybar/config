[colors]
background = #000
background-alt = #303030 
background-alt2 = ${xrdb:color0}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color4}
primary = ${xrdb:color3}
secondary = #536879
alert = #bd2c40

[bar/style]
width = 100%
dpi = 96
height = 34
fixed-center = true
enable-ipc = true
separator = %{F#33ffffff} | %{F-}

foreground = ${colors.foreground}
background = ${colors.background}

font-0 = DejaVu Sans Mono:style=regular,bold:size=12
font-1 = fontawesome:pixelsize=12;0
font-2 = noto sans symbols2:style=regular:pixelsize=12;1

line-size = 4
line-color = #f00

border-size = 0
module-margin-left = 1
module-margin-right = 1

tray-padding = 4
tray-color = ${colors.foreground}
tray-background = ${colors.background}

[bar/main]
inherit = bar/style

modules-left = mpd
modules-right = eth temperature date pulseaudio-control

cursor-click = pointer
cursor-scroll = ns-resize


[bar/secondary]
inherit = bar/style

modules-right = weather date


cursor-click = pointer
cursor-scroll = ns-resize


[bar/main-i3]
inherit = bar/main
monitor = ${env:MONITOR}
modules-left = i3
modules-right = mpd pulseaudio-control cpu memory temperature eth weather date
tray-position = right
wm-restack = i3
scroll-up = #i3.next
scroll-down = #i3.prev

[bar/secondary-i3]
inherit = bar/secondary
monitor = ${env:MONITOR}
modules-left = i3
modules-right = date
wm-restack = i3
cursor-click = pointer
cursor-scroll = ns-resize

[bar/laptop]
inherit = bar/style
monitor = ${env:MONITOR}
modules-left = i3
modules-center = mpd 
modules-right = battery1 battery2 date xbacklight
wm-restack = i3
cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%


[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = ${colors.primary}
label-mode-background = ${colors.secondary}

; focused = Active workspace on focused monitor
label-focused = %index:0:1%
label-focused-foreground = ${colors.primary}
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index:0:1%
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %index:0:1%
label-visible-foreground = ${colors.secondary}
label-visible-background = ${colors.background-alt}
label-visible-underline= ${colors.secondary}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %index:0:1%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

[module/bspwm]
type = internal/bspwm

label-focused = %{F#b48ead}%name%%{F-}
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 4

label-occupied = %name%
label-occupied-padding = 4

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 4

label-empty = ""
label-empty-padding = 0
label-empty-separator = ""

; Separator in between workspaces
 label-separator = ""
[module/mpd]
type = custom/script
exec = $HOME/scripts/current_song.sh
click-left = playerctl play-pause
format-underline = ${colors.background}
label-foreground = ${colors.foreground}
label-padding = 3
label-background = ${colors.background}


[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = BL
label-foreground = ${colors.foreground}

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #fff
bar-fill = ─
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-foreground = ${colors.foreground-alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight
label-foreground = ${colors.foreground}
format-foreground = ${colors.foreground}


[module/cpu]
type = internal/cpu
interval = 2
format = CPU <label>
format-prefix-foreground = ${colors.foreground-alt}
label-percentage-minlen = 3
label = %percentage:3%%
label-foreground = ${colors.foreground-alt}

[module/memory]
type = internal/memory
interval = 2
format = RAM <label>
label = %gb_used% (%percentage_used:3%%)
label-foreground = ${colors.foreground-alt}

[module/wlan]
type = internal/network
interface = net1
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-foreground = ${colors.foreground}
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground}

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0

label-connected = E: %local_ip% (%linkspeed%)
label-connected-foreground = ${colors.foreground}
label-connected-background = ${colors.background}

label-disconnected = %ifname% disconnected
format-disconnected = <label-disconnected>
label-disconnected-foreground = ${colors.foreground}

[module/date]
type = internal/date
interval = 5

date = "%d.%m,"

time = %H:%M
time-alt = %H:%M:%S

label = %date% %time%
label-foreground = ${colors.foreground}
label-background = ${colors.background}
label-padding-right = 4

[module/output]
type = custom/script
exec = $HOME/scripts/get_current_output.sh
click-left = bash -c $HOME/scripts/switch_current_output.sh
format-underline = ${colors.background}
label-foreground = ${colors.foreground}
label-padding = 3
label-background = ${colors.background}

[module/weather]
type = custom/script
exec = curl wttr.in/${1:-Köln}\?lang=de\&format="+%c+%t+%o" --silent
label-foreground = ${colors.foreground}

[module/battery1]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC
[module/battery2]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT1
adapter = AC

[module/pulseaudio-control]
type = custom/script
tail = true
label-padding = 2
label-foreground = ${colors.foreground}

# Icons mixed from Font Awesome 5 and Material Icons
# You can copy-paste your options for each possible action, which is more
# trouble-free but repetitive, or apply only the relevant ones (for example
# --sink-blacklist is only needed for next-sink).
exec = pulseaudio-control --icons-volume " , " --icon-muted " " --sink-nicknames-from "device.description" --sink-nickname "alsa_card.pci-0000_00_1f.3-platform-skl_hda_dsp_generic:  Speakers" --sink-nickname "alsa_card.usb-Yamaha_Corporation_Steinberg_UR22mkII-00:  Kopfhörer" listen
click-left = pulseaudio-control togmute
click-right = $HOME/scripts/switch_current_output.sh
click-middle = exec pavucontrol &
scroll-up = pulseaudio-control --volume-max 130 up
scroll-down = pulseaudio-control --volume-max 130 down

[module/temperature]
type = internal/temperature

; Seconds to sleep between updates
; Default: 1
interval = 0.5

; Thermal zone to use
; To list all the zone types, run 
; $ for i in /sys/class/thermal/thermal_zone*; do echo "$i: $(<$i/type)"; done
; Default: 0
thermal-zone = 0

; Full path of temperature sysfs path
; Use `sensors` to find preferred temperature source, then run
; $ for i in /sys/class/hwmon/hwmon*/temp*_input; do echo "$(<$(dirname $i)/name): $(cat ${i%_*}_label 2>/dev/null || echo $(basename ${i%_*})) $(readlink -f $i)"; done
; to find path to desired file
; Default reverts to thermal zone setting
hwmon-path = /sys/devices/platform/thinkpad_hwmon/hwmon/hwmon5/temp1_input

; Base temperature for where to start the ramp (in degrees celsius)
; Default: 0
base-temperature = 20

; Threshold temperature to display warning label (in degrees celsius)
; Default: 80
warn-temperature = 60


