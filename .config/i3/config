default_border none
default_border none
default_floating_border none
for_window [class="chromium"] border pixel -1
hide_edge_borders vertical
hide_edge_borders horizontal
hide_edge_borders both


set $center move absolute position center
set $inner 32
set $outer 16

bindsym $mod+l exec "~/.local/bin/fuzzy_lock.sh"
exec xautolock -time 4 -locker "~/.local/bin/fuzzy_lock.sh"
exec albert
exec dunst
exec --no-startup-id nitrogen --restore
exec --no-startup-id compton
 

