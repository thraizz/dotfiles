# Focus mode: Hide polybar and remove gaps
bindsym $mod+Shift+f \
gaps inner all set 0 \
gaps outer all set 0 \
exec polybar-msg cmd hide 
bindsym $mod+$alt+f \
gaps inner all set 8 \
gaps outer all set 10 \
exec polybar-msg cmd show

# Swap windows
bindsym $mod+m mark --replace swapme
bindsym $mod+Tab swap container with mark swapme
bindsym $mod+Shift+Tab '[con_mark="swapme"]' focus

# Restart i3
bindsym $mod+Shift+r restart
# Exit i3
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

