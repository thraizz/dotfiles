# Focus mode: Hide polybar and remove gaps
bindsym $mod+Shift+f \
gaps inner all set 0 \
gaps outer all set 0 \
exec polybar-msg cmd hide 
bindsym $mod+$alt+f \
gaps inner all set 8 \
gaps outer all set 10 \
exec polybar-msg cmd show

